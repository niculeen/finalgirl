<div>
  <div class="flex justify-center mb-2 print-hidden">
    <p class="font-head text-white opacity-50">FRONT</p>
  </div>
  <div class="card front flex flex-col mx-auto" style="width: 575px; height: 408px;">
    <%= render 'card_head' %>
    <div class="flex w-7/12 pl-4 pt-3 pb-6 print:pl-2 print:pt-3 print:pb-3 flex-grow flex-wrap items-center justify-center">
      <%= render RewardMeepleComponent.new(id: 'reward_1') %>
      <%= render RewardMeepleComponent.new(id: 'reward_2') %>
      <%= render RewardMeepleComponent.new(id: 'reward_3') %>
      <%= render RewardMeepleComponent.new(id: 'reward_4', top: -136) %>
      <%= render RewardMeepleComponent.new(id: 'reward_5', top: -136) %>
      <%= render RewardMeepleComponent.new(id: 'reward_6', top: -136, hidden: 'hidden') %>
    </div>
    <%= image_tag "laurie.png", style: "width: 307px; height: 409px; left: 267px; top: 0;", class: "card__image absolute z-0", id: "initial_image_front" %>
  </div>
  <div class="flex justify-between mb-2 mt-2 print-hidden">
    <div class="">
      <p class="font-head text-white" data-controller="spaces">Victim Save Spaces:
        <span data-action="click->spaces#change" class="space_option opacity-50 hover:text-red cursor-pointer">1</span>
        <span data-action="click->spaces#change" class="space_option opacity-50 hover:text-red cursor-pointer">2</span>
        <span data-action="click->spaces#change" class="space_option opacity-50 hover:text-red cursor-pointer">3</span>
        <span data-action="click->spaces#change" class="space_option opacity-50 hover:text-red cursor-pointer">4</span>
        <span data-action="click->spaces#change" class="space_option opacity-50 hover:text-red text-red cursor-pointer">5</span>
        <span data-action="click->spaces#change" class="space_option opacity-50 hover:text-red cursor-pointer">6</span>
      </p>
    </div>
    <%= form_for(Card.new, remote: true, url: save_photo_path) do |f| %>
      <label>
        <p class="font-head text-white opacity-80 hover:opacity-100 hover:text-red cursor-pointer" id="change_front">Change Photo</p>
        <%= f.file_field :photo, class: "hidden input_front" %>
      </label>
      <div class="hidden">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>